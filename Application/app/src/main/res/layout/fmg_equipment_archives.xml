<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@drawable/bg_whit_shadw_2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@+id/ll_equipment_image"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="18dp">

                        <TextView
                            style="@style/Equipment_TEXT_TITLE_STYLE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所在属地" />

                        <TextView
                            android:id="@+id/tv_0"
                            style="@style/Equipment_TEXT_CONTENT_STYLE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="设备位号" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Equipment_TEXT_TITLE_STYLE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备位号" />

                        <TextView
                            android:id="@+id/tv_1"
                            style="@style/Equipment_TEXT_CONTENT_STYLE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="设备位号" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Equipment_TEXT_TITLE_STYLE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备类型" />

                        <TextView
                            android:id="@+id/tv_2"
                            style="@style/Equipment_TEXT_CONTENT_STYLE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="设备位号" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Equipment_TEXT_TITLE_STYLE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生产厂商" />

                        <TextView
                            android:id="@+id/tv_4"
                            style="@style/Equipment_TEXT_CONTENT_STYLE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="设备位号" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_equipment_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="27dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="157dp"
                        android:layout_height="92dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="铭牌信息"
                        android:textColor="@color/text_black"
                        android:textSize="17sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Equipment_TEXT_TITLE_STYLE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备状态" />

                    <TextView
                        android:id="@+id/tv_7"
                        style="@style/Equipment_TEXT_CONTENT_STYLE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="设备位号" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Equipment_TEXT_TITLE_STYLE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运行状态" />

                    <TextView
                        android:id="@+id/tv_6"
                        style="@style/Equipment_TEXT_CONTENT_STYLE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="设备位号" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Equipment_TEXT_TITLE_STYLE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安装时间" />

                    <TextView
                        android:id="@+id/tv_8"
                        style="@style/Equipment_TEXT_CONTENT_STYLE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="设备位号" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Equipment_TEXT_TITLE_STYLE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运行时间" />

                    <TextView
                        android:id="@+id/tv_10"
                        style="@style/Equipment_TEXT_CONTENT_STYLE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="设备位号" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Equipment_TEXT_TITLE_STYLE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出厂编号" />

                    <TextView
                        android:id="@+id/tv_3"
                        style="@style/Equipment_TEXT_CONTENT_STYLE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="设备位号" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Equipment_TEXT_TITLE_STYLE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="供应厂商" />

                    <TextView
                        android:id="@+id/tv_5"
                        style="@style/Equipment_TEXT_CONTENT_STYLE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="设备位号" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Equipment_TEXT_TITLE_STYLE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生产时间" />

                    <TextView
                        android:id="@+id/tv_9"
                        style="@style/Equipment_TEXT_CONTENT_STYLE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="设备位号" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_whit_shadw_2"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="0dp"
                    android:layout_height="121dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_comm_white"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_fault"
                        android:drawablePadding="21dp"
                        android:gravity="center_vertical"
                        android:text="故障记录"
                        android:textColor="@color/text_black"
                        android:textSize="20sp" />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@color/color_division" />


                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="0dp"
                    android:layout_height="121dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_comm_white"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_inspection"
                        android:drawablePadding="21dp"
                        android:gravity="center_vertical"
                        android:text="巡检数据"
                        android:textColor="@color/text_black"
                        android:textSize="20sp" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>